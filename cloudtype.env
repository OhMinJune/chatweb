# CloudType 배포용 환경변수 설정
# 실제 배포 시 CloudType 대시보드에서 환경변수로 설정하세요

# 포트 설정 (CloudType에서 자동 할당)
PORT=3000

# Node.js 환경
NODE_ENV=production

# CloudType 환경 감지
CLOUDTYPE=true

# 데이터베이스 설정 (PostgreSQL)
# Supabase 또는 다른 PostgreSQL 서비스 사용 시
DATABASE_URL=postgresql://username:password@host:port/database

# 또는 개별 설정
PGHOST=your-db-host
PGUSER=your-db-user
PGPASSWORD=your-db-password
PGDATABASE=your-db-name
PGPORT=5432

# 세션 시크릿 키 (보안을 위해 변경하세요)
SESSION_SECRET=your-super-secret-session-key-here

# CORS 설정 (필요시)
CORS_ORIGIN=https://your-domain.cloudtype.app
